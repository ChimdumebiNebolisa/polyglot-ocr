{
  "name": "polyglot-ocr",
  "version": "1.0.0",
  "description": "Chrome Extension for real-time translation and OCR",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:extension": "node build-dev.js",
    "build:extension:dev": "cross-env NODE_ENV=development node build-dev.js",
    "build:extension:prod": "cross-env NODE_ENV=production node build-dev.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tesseract.js": "^4.1.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^24.6.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
