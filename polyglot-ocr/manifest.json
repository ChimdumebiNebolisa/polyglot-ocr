{
  "manifest_version": 3,
  "name": "Polyglot OCR",
  "version": "1.0.1",
  "description": "Real-time translation and OCR for any webpage",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "offscreen",
    "scripting"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"]
    }
  ],
  "action": {
    "default_popup": "dist/src/popup/index.html",
    "default_title": "Polyglot OCR",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/src/offscreen/offscreen.html"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://*/*", "https://*/*"]
  }
}

